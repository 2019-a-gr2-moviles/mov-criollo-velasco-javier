<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="nombrePlato" android:text="a"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLiga"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre" app:layout_constraintStart_toStartOf="@+id/txtNombre"
            android:hint="descripcionPlato" tools:text="b"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaCreacion"
            app:layout_constraintEnd_toEndOf="@+id/txtLiga" app:layout_constraintStart_toStartOf="@+id/txtLiga"
            app:layout_constraintTop_toBottomOf="@+id/txtLiga" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.0" android:hint="nacionalidad" tools:text="c"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNumCopInter"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaCreacion"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaCreacion"
            app:layout_constraintStart_toStartOf="@+id/txtFechaCreacion"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.0" android:hint="numeroPersonas"
            android:text="4"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCampeonActual"
            app:layout_constraintTop_toBottomOf="@+id/txtNumCopInter" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/txtNumCopInter"
            app:layout_constraintStart_toStartOf="@+id/txtNumCopInter"
            app:layout_constraintHorizontal_bias="0.0" android:hint="picante" android:text="d"/>
    <Button
            android:text="Crear Comida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual" android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/txtCampeonActual"
            app:layout_constraintStart_toStartOf="@+id/txtCampeonActual"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar" app:layout_constraintStart_toEndOf="@+id/btnAceptar"
            android:layout_marginStart="52dp" app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.032"/>
</android.support.constraint.ConstraintLayout>