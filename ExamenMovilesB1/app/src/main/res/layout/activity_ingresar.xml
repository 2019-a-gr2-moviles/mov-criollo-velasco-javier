<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre"
            android:hint="nombrePlato" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="112dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="194dp" android:id="@+id/txtLiga"
            android:hint="descripcionPlato"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre" app:layout_constraintStart_toStartOf="@+id/txtNombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="271dp"
            android:id="@+id/txtFechaCreacion"
            android:hint="nacionalidad" app:layout_constraintEnd_toEndOf="@+id/txtLiga"
            app:layout_constraintStart_toStartOf="@+id/txtLiga"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="343dp" android:id="@+id/txtNumCopInter"
            android:hint="numeroPersonas"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaCreacion"
            app:layout_constraintStart_toStartOf="@+id/txtFechaCreacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="417dp"
            android:id="@+id/txtCampeonActual"
            android:hint="picante"
            app:layout_constraintEnd_toEndOf="@+id/txtNumCopInter"
            app:layout_constraintStart_toStartOf="@+id/txtNumCopInter"/>
    <Button
            android:text="Crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual"
            app:layout_constraintEnd_toEndOf="@+id/txtCampeonActual"
            app:layout_constraintStart_toStartOf="@+id/txtCampeonActual" android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar" app:layout_constraintStart_toEndOf="@+id/btnAceptar"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="88dp"
            app:layout_constraintHorizontal_bias="0.187"/>
</android.support.constraint.ConstraintLayout>