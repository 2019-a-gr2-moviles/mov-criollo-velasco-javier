<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarIngredientesActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNombreIngAct" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="nombreIngrediente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCantidadIngAct" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreIngAct"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreIngAct"
            app:layout_constraintStart_toStartOf="@+id/txtNombreIngAct" android:hint="cantidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDescripcionIngAct" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCantidadIngAct"
            app:layout_constraintEnd_toEndOf="@+id/txtCantidadIngAct"
            app:layout_constraintStart_toStartOf="@+id/txtCantidadIngAct" android:hint="descripcionPreparacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtOpcionalIngAct"
            app:layout_constraintEnd_toEndOf="@+id/txtDescripcionIngAct"
            app:layout_constraintStart_toStartOf="@+id/txtDescripcionIngAct"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDescripcionIngAct"
            android:hint="opcional"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txttipoIngAct"
            app:layout_constraintEnd_toEndOf="@+id/txtOpcionalIngAct"
            app:layout_constraintStart_toStartOf="@+id/txtOpcionalIngAct"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtOpcionalIngAct"
            android:hint="tipoIngrediente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtRefriIntAct"
            app:layout_constraintEnd_toEndOf="@+id/txttipoIngAct"
            app:layout_constraintStart_toStartOf="@+id/txttipoIngAct"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txttipoIngAct"
            android:hint="necesitaRefrigeracion"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarIngAct" app:layout_constraintStart_toStartOf="@+id/txtRefriIntAct"
            app:layout_constraintEnd_toEndOf="@+id/txtRefriIntAct" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRefriIntAct" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarIngAct" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarIngAct"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarIngAct"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarIngAct"/>
</android.support.constraint.ConstraintLayout>