<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarIngredientesActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNombreIngIng" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="nombreIngrediente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCantidadIngIng" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreIngIng"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreIngIng"
            app:layout_constraintStart_toStartOf="@+id/txtNombreIngIng" android:hint="cantidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDescripcionIngIng" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCantidadIngIng"
            app:layout_constraintEnd_toEndOf="@+id/txtCantidadIngIng"
            app:layout_constraintStart_toStartOf="@+id/txtCantidadIngIng" android:hint="descripcionPreparacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtOpcionalIngIng"
            app:layout_constraintEnd_toEndOf="@+id/txtDescripcionIngIng"
            app:layout_constraintStart_toStartOf="@+id/txtDescripcionIngIng"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDescripcionIngIng"
            android:hint="opcional"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtTipoIngIng"
            app:layout_constraintEnd_toEndOf="@+id/txtOpcionalIngIng"
            app:layout_constraintStart_toStartOf="@+id/txtOpcionalIngIng"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtOpcionalIngIng"
            android:hint="tipoIngrediente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtRefriIngIng"
            app:layout_constraintEnd_toEndOf="@+id/txtTipoIngIng"
            app:layout_constraintStart_toStartOf="@+id/txtTipoIngIng"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtTipoIngIng"
            android:hint="necesitaRefrigeracion"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarIngIng" app:layout_constraintStart_toStartOf="@+id/txtRefriIngIng"
            app:layout_constraintEnd_toEndOf="@+id/txtRefriIngIng" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRefriIngIng" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarIngIng" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarIngIng"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarIngIng"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarIngIng"/>
</android.support.constraint.ConstraintLayout>