<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDesc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="@+id/txtNombre" android:layout_marginStart="3dp"
            android:hint="descripcionPlato" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Crear"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrearCom"
            app:layout_constraintStart_toStartOf="@+id/txtPican"
            app:layout_constraintEnd_toEndOf="@+id/txtPican" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPican" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelarCom"
            app:layout_constraintStart_toEndOf="@+id/btnCrearCom"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPican" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.157"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="nombrePlato"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumPer"
            android:hint="numeroPersonas"
            app:layout_constraintStart_toStartOf="@+id/txtNaciona"
            app:layout_constraintEnd_toEndOf="@+id/txtNaciona"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txtNaciona"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtPican"
            app:layout_constraintStart_toStartOf="@+id/txtNumPer"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPer"
            app:layout_constraintTop_toBottomOf="@+id/txtNumPer" android:hint="picante"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNaciona"
            app:layout_constraintStart_toStartOf="@+id/txtDesc" app:layout_constraintEnd_toEndOf="@+id/txtDesc"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDesc"
            android:hint="nacionalidad"/>
</android.support.constraint.ConstraintLayout>