<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLiga" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="@+id/txtNombre" android:layout_marginStart="3dp"
            android:hint="Apellido" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Crear"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            app:layout_constraintStart_toStartOf="@+id/txtCampeonActual"
            app:layout_constraintEnd_toEndOf="@+id/txtCampeonActual" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            app:layout_constraintStart_toEndOf="@+id/btnAceptar"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonActual" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.157"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumCopInter"
            android:hint="Cantidad Autos"
            app:layout_constraintStart_toStartOf="@+id/txtFechaCreacion"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaCreacion"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txtFechaCreacion"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCampeonActual"
            app:layout_constraintStart_toStartOf="@+id/txtNumCopInter"
            app:layout_constraintEnd_toEndOf="@+id/txtNumCopInter"
            app:layout_constraintTop_toBottomOf="@+id/txtNumCopInter" android:hint="Licencia"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaCreacion"
            app:layout_constraintStart_toStartOf="@+id/txtLiga" app:layout_constraintEnd_toEndOf="@+id/txtLiga"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtLiga"
            android:hint="Fecha Nacimiento"/>
</android.support.constraint.ConstraintLayout>