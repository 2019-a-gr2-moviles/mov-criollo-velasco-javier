<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCampeonAct"
            app:layout_constraintStart_toStartOf="@+id/txtNumPer"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPer" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtNumPer"
            android:hint="picante"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNaciona" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDesc"
            app:layout_constraintStart_toStartOf="@+id/txtDesc" app:layout_constraintEnd_toEndOf="@+id/txtDesc"
            app:layout_constraintHorizontal_bias="0.0" android:hint="nacionalidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDesc" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="@+id/txtNombre" app:layout_constraintEnd_toEndOf="@+id/txtNombre"
            app:layout_constraintHorizontal_bias="0.0" android:hint="descripcionPlato"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="nombrePlato"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarAct" app:layout_constraintStart_toStartOf="@+id/txtCampeonAct"
            app:layout_constraintEnd_toEndOf="@+id/txtCampeonAct" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonAct" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarAct"
            app:layout_constraintStart_toEndOf="@+id/btnEliminarAct"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCampeonAct" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Crear Ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrearIng"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarAct"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/btnEliminarAct"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/txtCampeonAct"
            android:layout_marginTop="80dp" app:layout_constraintHorizontal_bias="0.346"/>
    <Button
            android:text="Gestionar Ingredientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGestionarIng"
            app:layout_constraintTop_toBottomOf="@+id/btnCrearIng"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="@+id/btnCrearIng"
            app:layout_constraintStart_toStartOf="@+id/btnCrearIng" app:layout_constraintHorizontal_bias="0.634"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumPer"
            app:layout_constraintStart_toStartOf="@+id/txtNaciona"
            app:layout_constraintEnd_toEndOf="@+id/txtNaciona" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNaciona" android:hint="numeroPersonas"/>
    <Button
            android:text="Volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuRetorno"
            app:layout_constraintStart_toStartOf="@+id/btnGestionarIng"
            app:layout_constraintEnd_toEndOf="@+id/btnGestionarIng"
            app:layout_constraintTop_toBottomOf="@+id/btnGestionarIng" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.548"/>
</android.support.constraint.ConstraintLayout>