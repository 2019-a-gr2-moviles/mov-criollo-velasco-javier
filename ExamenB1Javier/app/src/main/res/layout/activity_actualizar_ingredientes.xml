<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarIngredientesActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNomIng" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="nombreIngrediente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCantIng" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNomIng"
            app:layout_constraintEnd_toEndOf="@+id/txtNomIng"
            app:layout_constraintStart_toStartOf="@+id/txtNomIng" android:hint="cantidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDescIng" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCantIng"
            app:layout_constraintEnd_toEndOf="@+id/txtCantIng"
            app:layout_constraintStart_toStartOf="@+id/txtCantIng" android:hint="descripcionPreparacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtOpciIng"
            app:layout_constraintEnd_toEndOf="@+id/txtDescIng"
            app:layout_constraintStart_toStartOf="@+id/txtDescIng"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDescIng"
            android:hint="opcional"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtTipoIng"
            app:layout_constraintEnd_toEndOf="@+id/txtOpciIng"
            app:layout_constraintStart_toStartOf="@+id/txtOpciIng"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtOpciIng"
            android:hint="tipoIngrediente"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtRefriIng"
            app:layout_constraintEnd_toEndOf="@+id/txtTipoIng"
            app:layout_constraintStart_toStartOf="@+id/txtTipoIng"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtTipoIng"
            android:hint="necesitaRefrigeracion"/>
    <Button
            android:text="Actualizar Ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarJugador" app:layout_constraintStart_toStartOf="@+id/txtRefriIng"
            app:layout_constraintEnd_toEndOf="@+id/txtRefriIng" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtRefriIng" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="Eliminar Ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarJugador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarJugador"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarJugador"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarJugador"/>
</android.support.constraint.ConstraintLayout>